<!DOCTYPE html>
<html>
<head>
  <title>PoolMouillee</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <!-- Add these line for detecting device width -->
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  <%= csrf_meta_tags %>
  <title><%= yield(:title) || "Pool Mouillee" %></title>
</head>
<body>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <%= render "shared/navbar" %>

  <div class="inner-body-minimum-height">
    <%= yield %>
  </div>

  <%= render "shared/footer" %>
  <!-- Google Maps -->

  <%= javascript_include_tag "https://google-maps-utility-library-v3.googlecode.com/svn/tags/markerclustererplus/2.0.14/src/markerclusterer_packed.js" %>

  <%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyBYcAxl74WUjIEgd6IYCS-3RBNwC4D1DOc" %>

  <%= javascript_include_tag "application" %>

  <%= yield(:after_js) %>

  <%= javascript_tag do %>
    $(document).on('ready', function() {
      console.log('in the script');
      var notif = parseInt($('.notif').text());
      console.log(notif);
      if (notif > 0) {
        console.log('in the if');
        $('.notif').css('display','inline-block');
      }
    })
  <% end %>


</body>
</html>
