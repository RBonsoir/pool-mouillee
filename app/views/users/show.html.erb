<div class='container'>
  <div class="row">
    <div class='col-xs-12 col-md-3'>
      <div class='profile-container'>
        <div class="profile white-radius-box">
          <%= image_tag current_user.profile_picture, class:"img-profil-medium" %>
          <a role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false"><h4><%= current_user.first_name + ' ' + current_user.last_name %></h4></a>
          <div class="collapse" id="collapseExample">
            <ul>
              <li><%= link_to 'Edit profile', edit_user_path, class:'update-profile-links' %></li>
              <li><%= link_to 'Edit account', edit_user_registration_path(current_user), class:'update-profile-links'  %></li>
              <li><%= link_to 'Log out', destroy_user_session_path, method: :delete, class:'white-radius-box', class:'update-profile-links'  %></li>
            </ul>
          </div>
        </div>
        <div class='my-pools white-radius-box'>
          <h4> My Pools</h4>
          <ul>
            <% current_user.pools.each do |pool| %>
              <%= link_to pool_path(pool) do %>
                  <li><%= image_tag pool.picture.url(:thumbnail), class:'img-avatar'%>
                    <%= pool.title %></li>
                  <% end %>
            <% end %>
          </ul>
          <button class='btn btn-danger add-pool'><%= link_to 'Add a pool', new_pool_path %></button>
        </div>
      </div>
    </div>
    <div class='col-xs-12 col-md-9'>
      <div class='main-container'>

        <div class='my-bookings white-radius-box'>
          <h3>My Bookings</h3>
          <table class='table table-hover text-align-left'>
            <th class='hidden-responsive'></th>
            <th>Pool</th>
            <th>Date</th>
            <th class='hidden-responsive'>Lenght</th>
            <th>Status</th>
            <% current_user.bookings.each do |booking| %>
              <tr>
                <td class='vert-align hidden-responsive'>
                  <%= link_to pool_path(booking.pool) do %>
                    <%= image_tag booking.pool.picture.url(:thumbnail) %>
                  <% end %>
                </td>
                <td class='vert-align'><strong><%= booking.pool.title %></strong></td>
                <td class='vert-align'><%= booking.checkin_on %></td>
                <td class='vert-align hidden-responsive'><%= booking.length %>
                  <% if booking.status == 'Pending' %>
                     <td class='vert-align text-warning'><strong><i class="fa fa-clock-o"></i> <%= booking.status %></strong></td>
                  <% elsif booking.status == 'Confirmed' %>
                    <td class='vert-align text-success'><strong><i class="fa fa-check"></i> <%= booking.status %></strong></td>
                  <% else %>
                    <td class='vert-align text-danger'><strong><i class="fa fa-times"></i> <%= booking.status %></strong></td>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </table>
        </div>

        <div class='my-pool-requests white-radius-box'>
          <h3>My Pools Requests</h3>
          <table class='table table-hover'>
            <th class='hidden-responsive'></th>
            <th class='hidden-responsive'>Guest</th>
            <th>Pool</th>
            <th>Date</th>
            <th class='hidden-responsive'>Status</th>
            <th>Action</th>
              <% current_user.pools.each do |pool| %>
                <% pool.bookings.each do |booking| %>
                  <tr>
                    <% if booking.user.provider %>
                      <td class='vert-align hidden-responsive'><%= image_tag booking.user.facebook_picture, class:"img-avatar" %></td>
                    <% else %>
                      <td class='vert-align hidden-responsive'><%= image_tag booking.user.picture(:thumb), class:"img-avatar" %></td>
                    <% end %>
                    <td class='vert-align hidden-responsive'><strong><%= booking.user.first_name + ' ' + booking.user.last_name %></strong></td>
                    <td class='vert-align'><%= booking.pool.title %></td>
                    <td class='vert-align'><%= booking.checkin_on %></td>
                      <% if booking.status == 'Pending' %>
                        <td class='vert-align text-warning'>
                          <ul class='list-inline  hidden-responsive'>
                            <li><strong><i class="fa fa-clock-o"></strong></i></li>
                            <li><strong><%= booking.status %></strong></li>
                          </ul>
                        </td>
                        <td class='vert-align'>
                        <ul class='list-inline'>
                            <li><%= button_to 'Confirm', {controller: :bookings, action: :update, id: booking.id }, params: {status: 'Confirmed'}, method: :patch, class:'text-success' %></li>
                            <li><%= button_to 'Refuse', {controller: :bookings, action: :update, id: booking.id }, params: {status: 'Refused'}, method: :patch, class:''%></li>
                            </ul>
                        </td>
                      <% else %>
                        <% if booking.status == 'Confirmed' %>
                          <td class='vert-align text-success'>
                            <ul class='list-inline  hidden-responsive'>
                              <li><strong><i class="fa fa-check"></i></strong></li>
                              <li><strong><%= booking.status %></strong></li>
                            </ul>
                          </td>
                          <td class='vert-align'>
                            <%= button_to 'Cancel', {controller: :bookings, action: :update, id: booking.id }, params: {status: 'Refused'}, method: :patch, class:'change-status' %>
                          </td>
                        <% else %>
                          <td class='vert-align text-danger'>
                            <ul class='list-inline hidden-responsive'>
                              <li><strong><i class="fa fa-times"></strong></i></li>
                              <li><strong><%= booking.status %></strong></li>
                            </ul>
                          </td>
                          <td class='vert-align'>
                            <%= button_to 'Accept', {controller: :bookings, action: :update, id: booking.id }, params: {status: 'Confirmed'}, method: :patch, class:'change-status' %>
                          </td>
                        <% end %>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
