<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="card-white-content">

        <h2 class='text-center'>Update your profile</h2>

        <%= simple_form_for(current_user, html: { multipart: true }) do |f| %>
            <% if current_user.provider %>
              <%= image_tag current_user.facebook_picture %>
            <% else %>
              <%= image_tag current_user.picture.url(:thumb), class:"img-avatar"%>
            <% end %>
            <%= f.file_field :picture %><br>
            <%= f.input :first_name, label: false %>
            <%= f.input :last_name, label: false %>
            <%= f.button :submit, "Update your profile", class: "btn btn-success" %>
            <%= link_to 'Cancel', user_path, class:'btn btn-default' %>
        <% end %>

      </div>
    </div>
  </div>
</div>
