<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <div class="card-white-content">

        <h2>Update profile</h2>

        <%= simple_form_for(current_user, html: { multipart: true }) do |f| %>
            <% if current_user.provider %>
              <%= image_tag current_user.facebook_picture %>
            <% else %>
              <%= image_tag current_user.picture.url(:thumb), class:"img-avatar"%>
            <% end %>
            <%= f.file_field :picture %>
            <%= f.input :first_name %>
            <%= f.input :last_name %>
            <%= f.button :submit, "Update", class: "btn btn-primary" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
