<div class="container">
  <div class="row">
    <%= link_to "Back", :root, {class: "btn btn-primary", id: "btn-back"} %>
    <h1 id="city-display">Available pools in <%= @city %></h1>
  </div>
  <div class="row">
    <div class="col-xs-12 col-lg-7" id="pools-box">
      <% @pools.each do |pool| %>
        <div class="col-xs-12 col-md-6 text-center" id="pool-thumb-info-box">
          <%= link_to(pool_path(id: pool.id, checkin_on: @checkin_on, length: @length)) do %>
            <div id="img-pool-index">
              <p id="pool-title-display"><%= pool.title %></p>
              <div id="pool-price"> <%= pool.price %> â‚¬ </div>
              <%= image_tag "http://www.bitrebels.com/wp-content/themes/distinctive/img_resize/timthumb.php?src=http://www.bitrebels.com/wp-content/uploads/2010/01/geek-girls.jpg&h=280&w=274&zc=1", {class: "img-circle", id: "img-user-index"}%>
            </div>
          <% end %>
          <div id="title-card">
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-xs-5 hidden-xs hidden-sm hidden-md visible-lg-*" id="map-container">
      <div id="map" style="width: 100%; height: 600px;"></div>
    </div>
  </div>
</div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).on('ready', function() {
      handler = Gmaps.build('Google');
      handler.buildMap({ internal: { id: 'map' } }, function(){
        markers = handler.addMarkers(<%= raw @markers.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        handler.getMap().setZoom(15);
      });
    })
  <% end %>
<% end %>
