      </div>
    </div>
    <div class="col-xs-12 col-md-6" id="pool-description-box-padding">
      <div class="white-radius-box" id="pool-infos-box">
        <h1><%= @pool.title %></h1>
        <h3><%= @pool.address + " - " + @pool.city %></h3>
        <p><%= @pool.content[0..30] %></p>
        <div id="capacity">
          <%= @pool.capacity %> <i class="fa fa-user"></i>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-md-3" id="side-box-padding">
      <div class="white-radius-box" id="book-pool-box">
        <h2>Booking</h2>
        <p><%= @day+ "/" + @month + "/" + @year %></p>
        <p><%= @length_text %></p>
        <div id="pool-price-booking"><%= @pool.price %> â‚¬</div>
        <p class="btn btn-danger">Confirm</p>
      </div>
    </div>
