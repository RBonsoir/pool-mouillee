<h1>Add your pool</h1>
<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="card text-center" id="new-pool">
        <%= simple_form_for [@pool] do |f| %>
          <%= f.error_notification %>
          <div class="form-group">
            <h2><i class="fa fa-quote-left"></i>Give a sexy name to your pool</h2>
            <%= f.input :title, label: false, placeholder: 'My big poooool' %>
          </div>
          <div class="form-group">
            <h2><i class="fa fa-map-marker"></i>Adress</h2>
            <%= f.input :address, label: false, placeholder: 'Marcel Pagnol Street, 32'  %>
            <%= f.input :city, label: false, collection: %w(Cannes Nice Palavas Valence Avignon Santa-Barbara Miami Monaco Yakutsk), prompt: 'Select your city' %>
          </div>
          <div class="form-group">
            <h2><i class="fa fa-money"></i>Price and capacity</h2>
            <%= f.input :price, label: false, hint:'Enter a price per hour', placeholder: '$ 10' %>
            <%= f.input :capacity, label: false, hint:'The bigger, the better' %>
          </div>
            <h2><i class="fa fa-glass"></i>A brief description</h2>
            <%= f.input :content, label: false, placeholder: 'Great pool with lots of swim buoys to enjoy your time. Sun is shining till late in afternoon, great to chill out by the pool with chicks!' %>
          </div>
          <%= f.button :submit %>
        <% end %>
      </div>
    </div>
  </div>
</div>
